{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "types": ["node"],
    "module": "nodenext",
    "target": "esnext",  
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": false,
    "allowJs": true,  
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}
